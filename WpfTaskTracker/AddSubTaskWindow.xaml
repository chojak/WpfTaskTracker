<Window x:Class="WpfTaskTracker.AddSubTaskWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfTaskTracker"
        mc:Ignorable="d"
        Title="AddSubTaskWindow" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Margin="5" VerticalAlignment="Center">Subtask name</Label>
            <TextBox Grid.Column="1" Name="TaskNameInput" Margin="5" Height="30"></TextBox>
        </Grid>
        <Button Grid.Row="6" HorizontalAlignment="Right" Margin="10" Padding="10,3,10,3" Click="SaveSubTask_Click">Save subtask</Button>
    </Grid>
</Window>
